const covidTitle = Array.from(document.querySelectorAll('.block__title'));
const blockBtn = Array.from(document.querySelectorAll('.block__btn'));
const blockItem = Array.from(document.querySelectorAll('.block__item'));

let _slideUp = (target, duration = 500) => {
  target.classList.add('_slide');
  let height = target.offsetHeight;
  target.style.transitionProperty = 'height, margin, padding';
  target.style.transitionDuration = duration + 'ms';
  target.style.height = height + 'px';
  target.offsetHeight;
  target.style.height = 0;
  target.style.paddingTop = 0;
  target.style.paddingBottom = 0;
  target.style.marginTop = 0;
  target.style.marginBottom = 0;
  target.style.overflow = 'hidden';
  window.setTimeout(() => {
    target.hidden = true;
    target.style.removeProperty('height');
    target.style.removeProperty('padding-top');
    target.style.removeProperty('padding-bottom');
    target.style.removeProperty('margin-top');
    target.style.removeProperty('margin-bottom');
    target.style.removeProperty('overflow');
    target.style.removeProperty('transition-duration');
    target.style.removeProperty('transition-property');
    target.classList.remove('_slide');
  }, duration);
};
let _slideDown = (target, duration = 500) => {
  target.classList.add('_slide');
  if (target.hidden) {
    target.hidden = false;
  }
  let height = target.offsetHeight;
  target.style.overflow = 'hidden';
  target.style.height = 0;
  target.style.paddingTop = 5 + 'px';
  target.style.paddingBottom = 0;
  target.style.marginTop = 0;
  target.style.marginBottom = 10 + 'px';
  target.offsetHeight;
  target.style.transitionProperty = 'height, margin, padding';
  target.style.transitionDuration = duration + 'ms';
  target.style.height = height + 'px';

  window.setTimeout(() => {
    target.style.removeProperty('height');
    target.style.removeProperty('overflow');
    target.style.removeProperty('transition-duration');
    target.style.removeProperty('transition-property');
    target.classList.remove('_slide');
  }, duration);
};

let _slideToggle = (target, duration = 500) => {
  if (target.hidden) {
    return _slideDown(target, duration);
  } else {
    return _slideUp(target, duration);
  }
};

covidTitle.forEach((el, idx) => {
  _slideToggle(covidTitle[idx].nextElementSibling, 0)
  el.addEventListener('click', () => {
    // title.forEach((el, idx) => {
    //   if (el.className.includes('active')) {
    //     el.classList.remove('active');
    //     _slideToggle(title[idx].nextElementSibling, 0);
    //     blockBtn[idx].classList.remove('active');
    //   }
    // });
    blockBtn[idx].classList.toggle('active')
    covidTitle[idx].classList.toggle('active')
    _slideToggle(covidTitle[idx].nextElementSibling, 500)
  })
})

const GoToCovidBlockBtn = document.querySelectorAll('a[href*="#"]')

for (let btn of GoToCovidBlockBtn) {
  btn.addEventListener('click', function (e) {
    e.preventDefault()

    const CovidBlockID = btn.getAttribute('href').substr(1)

    document.getElementById(CovidBlockID).scrollIntoView({
      behavior: 'smooth',
      block: 'start',
    })
  })
}